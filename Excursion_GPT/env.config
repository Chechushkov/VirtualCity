# Environment Variables Configuration for Excursion GPT Docker Compose

# Database Configuration
POSTGRES_DB=3D_Excursion
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# MinIO Configuration
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=admin12345
MINIO_DEFAULT_BUCKETS=models

# Application Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:80

# Database Connection String
CONNECTIONSTRINGS__DEFAULTCONNECTION=Host=postgres;Port=5432;Database=3D_Excursion;Username=postgres;Password=postgres

# JWT Configuration
JWT__KEY=ThisIsAStrongSecretKeyForJWTAuthenticationAndItShouldBeLongEnough
JWT__ISSUER=ExcursionGPTApi
JWT__AUDIENCE=ExcursionGPTClients

# MinIO Configuration for Application
MINIO__ENDPOINT=minio:9000
MINIO__ACCESSKEY=admin
MINIO__SECRETKEY=admin12345
MINIO__BUCKETNAME=models
MINIO__USESSL=false

# pgAdmin Configuration (Optional)
PGADMIN_DEFAULT_EMAIL=admin@excursion.com
PGADMIN_DEFAULT_PASSWORD=admin123

# Port Mappings
API_PORT=5000
API_SSL_PORT=5001
POSTGRES_PORT=5432
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
NGINX_PORT=80
PGADMIN_PORT=5050

# Volume Paths
POSTGRES_DATA=postgres_data
MINIO_DATA=minio_data
PGADMIN_DATA=pgadmin_data
APP_LOGS=./logs

# Network Configuration
NETWORK_NAME=excursion-network

# Health Check Settings
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=10s
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=40s
